generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  link            String  @unique
  job_type        String
  title           String
  company         String
  salary          String
  location        String
  experience      String
  level           String
  workingForm     String
  deadline        String
  shift           String
  degree          String
  age             String
  quantity        String
  field           String
  description     String
  requirement     String
  benefit         String
  companyLogo     String
  companySize     String
  companyHeadquarters String
  contactName     String
  contactPhone    String
  createdAt       DateTime @default(now())
}